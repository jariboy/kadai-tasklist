<ul class="media-list">
  <% tasks.each do |task| %>
    <% user = task.user %>
    <li class="media">
      <div class="media-body">
        <div>
          <p>
          <%= link_to task.id,task_path(task) %>
          <%= task.content %>
          <%= task.status %>
          </p>
        </div>
      </div>
    </li>
  <% end %>
  <p><%= link_to "新規タスクを作成する" ,new_task_path %></p>
</ul>